{
  "name": "stackoverflow-api",
  "version": "1.0.0",
  "main": "src/app.js",
  "author": "Kenneth Onah",
  "license": "MIT",
  "scripts": {
    "test": "ENV_TEST=true MDB_DB=support_manager_test_db nyc --reporter=text-summary --reporter=lcov mocha -r ts-node/register test/**/*.spec.ts --exit",
    "build": "tsc",
    "start": "npm run build && node build/src/app",
    "start:dev": "ts-node src/app",
    "seed": "ts-node src/database/seed/index",
    "seed:rollback": "ts-node src/database/seed/index --rollback"
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.3",
    "html-pdf": "^2.2.0",
    "json-request-validator": "^1.0.5",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.27.0",
    "mongodb": "^3.3.2",
    "mongoose": "^5.7.3",
    "morgan": "^1.9.1",
    "nodemailer": "^6.3.0",
    "swagger-ui-express": "^4.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/mocha": "^7.0.2",
    "@types/mongoose": "^5.7.30",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "mocha": "^6.2.1",
    "nyc": "^15.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  },
  "eslintConfig": {
    "rules": {
      "no-underscore-dangle": 0
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "airbnb-base"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    }
  }
}
